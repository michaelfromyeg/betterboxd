# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tab

[*.{md,json,yml,yaml,css,html}]
indent_size = 2

[*.{mjs,cjs,js,ts,jsx,tsx}]
indent_size = 2
